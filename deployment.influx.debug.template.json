{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "acr4anton": {
                "username": "$CONTAINER_REGISTRY_USERNAME_acr4anton",
                "password": "$CONTAINER_REGISTRY_PASSWORD_acr4anton",
                "address": "acr4anton.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.4",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.4",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "influxdb": {
            "restartPolicy": "always",
            "settings": {
              "image": "arm32v7/influxdb:1.8.10",
              "createOptions": "{\"HostConfig\":{\"Binds\":[\"myInfluxVolume:/var/lib/influxdb2\"],\"PortBindings\":{\"8086/tcp\":[{\"HostPort\":\"8086\"}]}}}"
            },
            "status": "running",
            "type": "docker"
          },
          "SimulatedTemperatureSensor": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-simulated-temperature-sensor:1.4",
              "createOptions": {}
            }
          },
          "writerToInfluxDb": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.writerToInfluxDb}",
              "createOptions": {}
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "sensorTowritermodule": "FROM /messages/modules/SimulatedTemperatureSensor/outputs/temperatureOutput INTO BrokeredEndpoint(\"/modules/writerToInfluxDb/inputs/writerToInfluxDb\")",
          "writermoduleToIoTHub": "FROM /messages/modules/writerToInfluxDb/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "writerToInfluxDb": {
      "properties.desired": {
        "TemperatureThreshold": 25
      }
    }
  }
}